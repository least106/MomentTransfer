{
  "debug_mode": false,
  "log_level": "INFO",
  "cache": {
    "enabled": true,
    "max_entries": 1000,
    "cache_types": ["rotation", "transformation"],
    "precision_digits": 10
  },
  "batch": {
    "chunk_size": 10000,
    "treat_non_numeric": "drop",
    "sample_rows": 5,
    "name_template": "{stem}_result_{timestamp}.csv",
    "timestamp_format": "%Y%m%d_%H%M%S",
    "max_retries": 3,
    "file_lock_timeout": 5.0,
    "enable_parallel": true,
    "num_workers": 0
  },
  "physics": {
    "rotation_precision_threshold": 1e-10,
    "moment_arm_threshold": 1e-12,
    "safe_divide_threshold": 1e-15,
    "check_nan": true
  },
  "plugin": {
    "plugin_dirs": ["./plugins", "./custom_plugins"],
    "auto_load": true,
    "enabled_plugins": [],
    "disabled_plugins": []
  }
}

[MASTER]
ignore=venv,tests
jobs=1

[MESSAGES CONTROL]
# 项目中 GUI 框架（PySide6）会导致 pylint 对运行时绑定的符号产生大量误报，
# 保守地禁用这些在 GUI-heavy 项目中常见的噪音项；同时保留缺失 docstring 的禁用。
disable=
	E0611,
	W1203,
	W0611,
	W0613,
	W0612,
	W0718,
	missing-module-docstring,
	missing-class-docstring,
	missing-function-docstring

[FORMAT]
max-line-length=88

[REPORTS]
output-format=text
score=yes
